      <% end %>




          <div class="col-lg-12">
            <div class="input-group" style="width:340px;text-align:center;margin:0 auto;">
              <%= f.text_field :first_name, class: "form-control input-lg", placeholder: "First Name", id: "top-field" %>
              
              <%= f.text_field :last_name, class: "form-control input-lg", placeholder: "Last Name" %>
              
              <%= f.text_field :email, class: "form-control input-lg", placeholder: "Email" %>
              
              <%= f.password_field :password, class: "form-control input-lg", placeholder: "password (min 6 char.)" %>
              
              <%= f.password_field :password_confirmation, class: "form-control input-lg", placeholder: "confirm password", id: "bottom-field" %>
              <span class="input-group-btn"><%= f.submit "ok", class: "btn btn-lg btn-primary user__button" %> </span>
            </div>
          </div>
        </div>

      </div> <!-- /row -->

