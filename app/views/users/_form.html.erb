<div class="container-full ">
  <div class="row">

    <div class="col-lg-12 text-center v-center">
    <%= form_for(@user) do |f|%>
      <% if @user.errors.any? %>
        <div class="error-box">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <% @user.errors.full_messages.each do |message| %>
