    <%= render partial: "home/navbar" %>

    <header id="header">
        <div class="header-content">
            <div class="header-content-inner">
                <%= image_tag("DORMVIP-trans.png", class: "header__title") %>
                <div class="header__tagline">Free. Your. Time.</div>
                <p class="header__tagline-text"> Laundry and snacks hand-delivered to your door </p>
                <a href="users/new" class="btn btn-default btn-xl"> Get Started! </a>
            </div>
        </div>
    </header>

    <section class="need-container" id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <h2 class="section-heading"><span class="need-container__title">What We Do</span></h2>
                    <hr class="light">
                    <p class="text-faded">Every week, we hand-deliver your fresh, clean laundry, along with the snacks, drinks and essentials you need.</p>
                </div>
            </div>
        </div>
    </section>

    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">How it works</h2>
                    <hr class="primary">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-diamond wow bounceIn text-primary"></i>
                        <h3>Choose a package </h3>
                        <p class="text-muted">Stay clean for a month, a semester, or all year long </p>
                    </div>
                </div>
                <div class="text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-newspaper-o wow bounceIn text-primary" data-wow-delay=".1s"></i>
                        <h3>Customize Your Order</h3>
                        <p class="text-muted">Choose from our <span> unbeleivable selection </span> of snacks, drinks and essentials </p>
                    </div>
                </div>
                <div class="text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-paper-plane wow bounceIn text-primary" data-wow-delay=".2s"></i>
                        <h3>We pick up your laundry</h3>
                        <p class="text-muted">Because who has time to do laundry these days. Get out there and enjoy your day!</p>
                    </div>
                </div>
                <div class="text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-heart wow bounceIn text-primary" data-wow-delay=".3s"></i>
                        <h3>We drop off your laundry</h3>
                        <p class="text-muted">Freshly cleaned and folded</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <aside class="bg-dark">
        <div class="container text-center">
            <div class="call-to-action">
                <h2>Get Started Today!</h2>
                <a href="bundles/new" class="btn btn-default btn-xl wow tada">New Bundle </a>
            </div>
        </div>
    </aside>

    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">

                    <h2 class="section-heading">Let's Get In Touch!</h2>
                    <hr class="primary">
                        <div class="field">

                        </div>
                        <div class="btn btn-submit">

                        </div>

                    <p>Stay in the loop sign up for the  <%= link_to "newsleter", new_user_path %></p>
                </div>
                <div class="col-lg-4 col-lg-offset-2 text-center">
                    <i class="fa fa-phone fa-3x wow bounceIn"></i>
                    <p>123-456-6789</p>
                </div>
                <div class="col-lg-4 text-center">
                    <i class="fa fa-envelope-o fa-3x wow bounceIn" data-wow-delay=".1s"></i>
                    <p><a href="mailto:your-email@your-domain.com">@dormvip.com</a></p>
                </div>
            </div>
        </div>
    </section>
