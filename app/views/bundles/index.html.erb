<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<div class="container-fluid">
  <div class="panel body">
    <% if @bundles.any? %>
      <% @bundles.each do |bundle| %>
        <%= bundle.title %> 

        <% if bundle.products.any? %>
          <ul><% bundle.products.each do |product| %>
            <li><%= product.title %></li>
                <%=product.bundle_id %>
          </ul>
          <% end %>
        
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>