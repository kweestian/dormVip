<div class="user-form user__form--low">
  <% flash.each do |name, msg| %>
    <div class="alert alert-<%= name %>">
      <a class="close" data-dismiss="alert">&#215</a>
      <% if msg.is_a?(String) %>
        <div id="flash_<%= name %>"> <%= sanitize(msg) %> </div>
      <% end %>
    </div>
  <% end %>
  <div class="field">
    <%= form_for [@order.user, @order] do |f| %>
      <%= f.select(:frequency, @frequencies, :selected => @asked_frequency) %><br>

      <%= f.select(:first_item, Product.all.collect {|u| u.name}, {class: 'selectBoxIt'}) %><br/ >
      <%= f.select(:second_item, Product.all.collect {|u| u.name}) %><br/ >
      <%= f.select(:third_item, Product.all.collect {|u| u.name}) %><br/ >
      <%= f.submit "Proceed to Checkout", class: "btn btn-lg btn-primary" %>

    <% end %>
  </div>
</div>
